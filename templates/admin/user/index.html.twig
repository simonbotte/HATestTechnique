{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_index' %}

{% block main %}
	<h1>{{ 'title.user_list'|trans }}</h1>

	<table class="table table-striped table-middle-aligned table-borderless">
		<thead>
			<tr>
				<th scope="col">{{ 'label.fullname'|trans }}</th>
				<th scope="col">
					{{ 'label.username'|trans }}</th>
				<th scope="col">
					{{ 'label.email'|trans }}</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.fullname }}</td>
					<td>{{ user.username}}</td>
					<td>{{ user.email}}</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4" align="center">{{ 'user.no_users_found'|trans }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

{% block sidebar %}
	<div class="section actions">
		<a href="{{ path('admin_user_new') }}" class="btn btn-lg btn-block btn-success">
			<i class="fa fa-plus" aria-hidden="true"></i>
			{{ 'action.create_user'|trans }}
		</a>
	</div>
	{{ parent() }}
	{{ show_source_code(_self) }}
{% endblock %}
